<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/top_layout" android:background="@color/white" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/event_type" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="Event" android:alpha="0.87" style="@style/TextViewAppearanceMediumBold" />
        <TextView android:ellipsize="marquee" android:id="@+id/calender_account_name" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="from : abcd" android:layout_below="@+id/event_type" style="@style/TextViewAppearanceMediumBold" />
        <TextView android:id="@+id/event_name" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="Event name" android:layout_below="@+id/calender_account_name" android:alpha="0.87" style="@style/TextViewAppearanceMedium" />
        <TextView android:ellipsize="marquee" android:id="@+id/event_desc" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="Event desc" android:maxLines="20" android:layout_below="@+id/event_name" style="@style/TextViewAppearanceMedium" />
        <TextView android:ellipsize="marquee" android:id="@+id/event_date" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="date" android:maxLines="5" android:layout_below="@+id/event_desc" style="@style/TextViewAppearanceMedium" />
    </RelativeLayout>
</RelativeLayout>
