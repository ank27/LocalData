<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="8dp" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
    <RelativeLayout android:id="@+id/ballon_view_incoming" android:background="@drawable/balloon_incoming_normal" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/chat_company_reply_text" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/message_text_incoming" android:paddingLeft="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="280dp" android:text="See this" android:layout_centerVertical="true" style="@style/sms_text_style" />
        </LinearLayout>
    </RelativeLayout>
    <TextView android:id="@+id/time_text_incoming" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="7:00 PM" android:layout_below="@+id/ballon_view_incoming" />
</RelativeLayout>
