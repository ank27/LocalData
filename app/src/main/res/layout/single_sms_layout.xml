<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/top_layout" android:background="@color/white" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/sms_sender" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="IM-40003" android:alpha="0.87" style="@style/TextViewAppearanceLargeBold" />
        <TextView android:ellipsize="marquee" android:id="@+id/sms_content" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="Dummy sms" android:maxLines="10" android:layout_below="@+id/sms_sender" style="@style/TextViewAppearanceMedium" />
        <TextView android:id="@+id/sms_timestamp" android:padding="3dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="3rd June" android:layout_below="@+id/sms_content" style="@style/TextViewAppearanceMedium" />
    </RelativeLayout>
</RelativeLayout>
